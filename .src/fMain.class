    recvptr = recvptr + 1
    recvd = True '整个数据帧接收完毕
    End If
    If ((recvlen + 1) = recvptr And Frame_Type = True)
    recv = False
    recvBuff = recvBuff & s
    recvptr = recvptr + 1
    recvd = True '整个数据帧接收完毕
    End If
   
  'ELSE IF (Asc(s) = &H16 AND (recvlen - 1) = recvptr AND Frame_Type = FALSE) 'EOT标志，STC不支持读
  ' DEBUG "b"
  ' recv = FALSE 
  ' recvBuff = recvBuff & s
  ' recvptr = recvptr + 1
  ' recvd = TRUE '整个数据帧接收完毕
  ' DEBUG "okay"
  End If
  If recv Then
    recvBuff = recvBuff & s
    recvptr = recvptr + 1
  End If
  If recvptr = 5 And Frame_Type = True Then
   recvLen = Asc(s)
   'DEBUG "Len" & global.BinToHex(s)
